{
    "name": "citizen-complaints",
    "version": "1.0.14",
    "description": "An Express citizen complaints backend",
    "author": "Bikorimana Saveur",
    "license": "MIT",
    "main": "index.ts",
    "private": true,
    "scripts": {
        "dev": "tsx watch --clear-screen=false backend/index.ts | pino-pretty",
        "frontend": "cd ./frontend && npm run dev",
        "build": "tsup",
        "start": "node dist/index.js",
        "clean": "rimraf dist coverage",
        "lint": "biome check backend/",
        "lint:fix": "biome check backend/ --fix",
        "format": "biome format backend/",
        "test": "vitest run"
    },
    "dependencies": {
        "@asteasolutions/zod-to-openapi": "^7.0.0",
        "bcryptjs": "^3.0.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "envalid": "^8.0.0",
        "express": "^4.19.2",
        "express-rate-limit": "^7.2.0",
        "helmet": "^8.0.0",
        "http-status-codes": "^2.3.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.15.0",
        "nodemailer": "^7.0.3",
        "pino": "^9.4.0",
        "pino-http": "^10.0.0",
        "swagger-ui-express": "^5.0.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/supertest": "^6.0.2",
        "@types/swagger-ui-express": "^4.1.6",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "pino-pretty": "^11.0.0",
        "rimraf": "^6.0.0",
        "supertest": "^7.0.0",
        "tsup": "^8.0.2",
        "tsx": "^4.7.2",
        "typescript": "^5.4.4",
        "vite-tsconfig-paths": "^5.0.0",
        "vitest": "^2.0.0"
    },
    "lint-staged": {
        "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
            "biome check --apply --no-errors-on-unmatched"
        ]
    },
    "tsup": {
        "entry": [
            "backend",
            "!backend/**/__tests__/**",
            "!backend/**/*.test.*"
        ],
        "splitting": false,
        "sourcemap": true,
        "clean": true
    }
}
